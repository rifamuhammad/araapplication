<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ara.app.com.araapplication">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/register"
        android:roundIcon="@drawable/register"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ara.app.com.araapplication.SplashActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ara.app.com.araapplication.UpdateDataActivity" />
        <activity android:name="ara.app.com.araapplication.DisplayActivity" />
        <activity android:name="ara.app.com.araapplication.PasswordResetActivity" />
        <activity android:name="ara.app.com.araapplication.ProfileActivity" />
        <activity android:name="ara.app.com.araapplication.RegisterActivity" />
        <activity android:name="ara.app.com.araapplication.LoginActivity">

        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>